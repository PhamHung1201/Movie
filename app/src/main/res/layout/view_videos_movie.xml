<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_normal"
    app:cardCornerRadius="@dimen/radius_normal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_424242">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/video_youtube_thumbnail"
            android:layout_width="270dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/video_youtube_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/video_youtube_thumbnail"
            app:layout_constraintStart_toStartOf="@id/video_youtube_thumbnail"
            app:layout_constraintTop_toTopOf="@id/video_youtube_thumbnail"
            app:srcCompat="@drawable/ic_play_circle_outline_white" />

        <TextView
            android:id="@+id/name_youtube_video"
            style="@style/FontRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:padding="@dimen/padding_default"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_size_h4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_youtube_thumbnail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_tiny"
    android:background="@color/color_212121">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_topic_container_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/view_topic_movie_poster"
            android:layout_width="150dp"
            android:layout_height="200dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/view_topic_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_tiny"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_h3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_topic_container_poster"
        tools:text="Title" />

    <TextView
        android:id="@+id/view_topic_movie_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_tiny"
        android:layout_marginBottom="@dimen/padding_tiny"
        android:gravity="start"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_h4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_topic_movie_title"
        tools:text="9.2 / 920" />

    <TextView
        android:id="@+id/view_topic_movie_release_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_tiny"
        android:layout_marginBottom="@dimen/padding_tiny"
        android:gravity="start"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_h4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_topic_movie_title"
        tools:text="10/03/2019" />
</androidx.constraintlayout.widget.ConstraintLayout>

